<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/platform/master/src/Core/System/SystemConfig/Schema/config.xsd">

    <card>
        <title>Basic configuration</title>
        <title lang="de-DE">Basis-Konfiguration</title>

        <input-field type="bool">
            <name>showReviewTexts</name>
            <label lang="de-DE">Review Texte ebenfalls ausgeben?</label>
            <label>Enable reviews?</label>
            <defaultValue>true</defaultValue>
            <helpText lang="de-DE">Wenn dies deaktiviert ist, wird nur ein durchschnittlicher Punktwert übergeben.</helpText>
            <helpText>If deactivated, just the star-rating will be submitted</helpText>
        </input-field>

        <input-field type="single-select">
            <name>fieldForMpn</name>
            <options>
                <option>
                    <id>suppliernumber</id>
                    <name lang="de-DE">Herstellernummer</name>
                    <name>Supplier number</name>
                </option>
                <option>
                    <id>ean</id>
                    <name lang="de-DE">EAN</name>
                    <name>EAN</name>
                </option>
            </options>
            <defaultValue>suppliernumber</defaultValue>
            <label lang="de-DE">Wert für MPN beziehen aus:</label>
            <label>Use this field as MPN:</label>
        </input-field>

    </card>

</config>
