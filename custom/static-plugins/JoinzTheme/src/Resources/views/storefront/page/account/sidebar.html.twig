{% block page_account_sidebar_inner %}

<main>
    <div class="banner banner-small">
        <div class="background"></div>
        <div class="grid-container">

            <p>Hi {{ context.customer.title }}
                {{ context.customer.firstName }}
                {{ context.customer.lastName }}, {% block page_account_sidebar_footer %}
                {% if context.customer %}
                {% if not context.customer.guest %}
                {% block page_account_sidebar_logout %}
                    <a href="{{ path('frontend.account.logout.page') }}"
                       class="btn btn-link account-aside-btn">
                        {{ "account.logout"|trans|sw_sanitize }}
                    </a>
                {% endblock %}
            {% else %}
                {% block page_account_sidebar_guest_abort %}
                        <a href="{{ path('frontend.account.logout.page') }}"
                           class="btn btn-link account-aside-btn">
                            {{ "account.guestAbort"|trans|sw_sanitize }}
                        </a>
                    {% endblock %}
            {% endif %}
            {% endif %}
            {% endblock %}</p>
        </div>
    </div>    <div class="account-menu">
        <div class="grid-container">
            <div class="account-menu-inner">
                <div class="grid-x grid-margin-x">
                    {% block page_account_sidebar_menu %}
                        {% if not context.customer.guest %}
                                {% block page_account_sidebar_menu_inner %}
                                    {% block page_account_sidebar_link_home %}
                                        <div class="cell medium-3">
                                            <div class="account-menu-item">
                                                <a href="{{ path('frontend.account.home.page') }}" class="flex-container flex-dir-column align-middle align-center">
                                                    <i class="icon-account-burger"></i>
                                                    Overzicht
                                                </a>
                                            </div>
                                        </div>
                                    {% endblock %}

                                    {% block page_account_sidebar_link_profile %}
                                        <div class="cell medium-3">
                                            <div class="account-menu-item">
                                                <a href="{{ path('frontend.account.profile.page') }}" class="flex-container flex-dir-column align-middle align-center">
                                                    <i class="icon-account-person"></i>
                                                    Profile
                                                </a>
                                            </div>
                                        </div>
                                    {% endblock %}

                                    {% block page_account_sidebar_link_address %}
                                        <div class="cell medium-3">
                                            <div class="account-menu-item">
                                                <a href="{{ path('frontend.account.address.page') }}" class="flex-container flex-dir-column align-middle align-center">
                                                    <i class="icon-account-address"></i>
                                                    Adres
                                                </a>
                                            </div>
                                        </div>
                                    {% endblock %}

                                    {% block page_account_sidebar_link_orders %}
                                        <div class="cell medium-3">
                                            <div class="account-menu-item">
                                                <a href="{{ path('frontend.account.order.page') }}" class="flex-container flex-dir-column align-middle align-center">
                                                    <i class="icon-account-bag"></i>
                                                    Orders
                                                </a>
                                            </div>
                                        </div>
                                    {% endblock %}
                                {% endblock %}
                        {% endif %}
                    {% endblock %}




                </div>
            </div>
        </div>
    </div>
{% endblock %}
